"UnlitGeneric"
{
	$BASETEXTURE "particle/fastSideSprite_trail"
	
	// Set this if you always want "additive over" blending (ONE:INVSRCALPHA)
	$ADDOVERBLEND 1
	
// RAMPTEXTURE and POWERFUNCTION are mutually exclusive:	
//	$RAMPTEXTURE "particle/fireGradient.vtf"
	$POWERFUNCTION "[0.8 2.5 5]"
	
	$OVERBRIGHTFACTOR 2.5
//	$EXTRACTGREENALPHA 1
	$ADDSELF 1.0
	$DEPTHBLEND 1
	$startfadesize .2
	$endfadesize .25
	"$vertexcolor" 1
	"$vertexalpha" 1
	$MAXSIZE .25
	$BLENDFRAMES 0
	$additive 1
	"$translucent" 1

}
